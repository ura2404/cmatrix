{% extends "Cmatrix^custom^master.twig" %}
{% block blockFavicon %}{{ page.favicon }}{% endblock %}

{% block blockPageName %}{{ page.name }}{% endblock %}

{% block blockTitle %}{{ page.name }}{% endblock %}

{% block blockRearHead %}{{ parent() }}<link rel="stylesheet" media="none" type="text/css" href="/cmatrix/module/Cmatrix/res/custom/404/main.css" onload="if(media!='all')media='all'"/>{% endblock %}

{% block blockBody %}
    <div class="page">
        {% if page.refer == '' %}Главная страница ...{% else %}Страница <b>{{ page.refer }}</b> ...{% endif %}
    </div>
    <div class="container">
        <div class="message">
            {% for p in text.random %}
                <p>{{ p }}</p>
            {% endfor %}
        </div>
        <div class="pic">
            <img src="{{ pic.random }}"/>
        </div>
    </div>
{% endblock %}